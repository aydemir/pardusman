<script type="text/javascript">

function enableField()
{
	$("#hostname_input").show();
	$("#hostname_label").show();
	
}


function disableField()
{

	$("#hostname_input").hide();
	$("#hostname_label").hide();
	
}




function sign_out()
{

	$("#loading").show();
	$.get("log_in",{logout:"True"},function(){

		window.location="";
		
	});
	

}


function is_logged_in()	$("#loading").show();
{


$.get("is_logged_in", {},function(data){
	
	if(data!='False')
	{

		load_step1();
	}


});


}

$(function() {  
     $("input[name='password']").keypress(function (e) {  
         if ((e.which && e.which == 13) || (e.keyCode && e.keyCode == 13)) {  
            sign_in(); 
            return false;  
         } else {  
             return true;  
         }  
     });  
});

function sign_in()
{

$("#loading").show();


$.get("log_in", { username: $('input[name="username"]').val(), password: $('input[name="password"]').val() },
  function(data){

	$("#loading").hide();
	
	if(data=='True')
	{
		load_step1();
	}
	else
	{ 
		$('#error').html('Wrong Username or Password ! <br /> Please try again.'); 
	}

  });


}


function sign_up()
{


$.get("register", { user: $('input[name="user"]').val(), email_id: $('input[name="email_id"]').val(), password1: $('input[name="password1"]').val(), password2: $('input[name="password2"]').val() },
  function(data){
	
	if(data=='True')
	{
		$('#error_signup').html("Account successfully created.<br />Confirmation is emailed.");
		$('#popup').fadeOut(8000,function(){$('#error_signup').text("")});
		$('#signup_form')[0].reset();
	}
	else
	{ 
		$('#error_signup').html(data);
	}

	

  });


}





function load_step0()
{

	$("#left_container").load("ajax_pool #left #page0");
	$("#right_container").load("ajax_pool #right #page0");
	$("#statusline").text("");

}	

function load_step1()
{


	$("#loading").show();

	$("#statusline").text("Distrotype");
	$("#left_container").load("ajax_pool #left #page1");

	if($("#step1_right").length)
	{
		$("#step1_right").show();
		$("#loading").hide();
	}
	else
	{	
		$("#right_container").load("ajax_pool #right #page1", function()
			{
			
				$("#loading").hide();			
			});

	}

	$("#page2").hide();
}	


function load_step2()
{

	$("#loading").show();

	if($("#page2").length)
	{
		$("#page2").show();
		$("#loading").hide();
	}

	else
	{
		
		$("<div />").load("ajax_pool #right #page2", function() {
						
								$(this).appendTo('#right_container');
								$("#loading").hide();
								});
	}


	$("#statusline").text("Distrotype > Repository");
	$("#step1_right").hide() ;
	$("#page3").hide() ;	
}	


function load_step3()
{
	$("#loading").show();
	if($("#page3").length)
	{
		$("#page3").show();
		$("#loading").hide();
	}

	else
	{
		$("<div />").load("ajax_pool #right #page3", function() {
						
								$(this).appendTo('#right_container');
								$("#loading").hide();
	
			$("#lang_selector div").hover(function(){$(this).fadeOut(100);$(this).fadeIn(500);});
			$("#lang_selector div").click(function()
				{
					$("#lang_selector div").removeClass("highlighted");
					$("#lang_selector div").removeClass("clicked");
					$(this).addClass("highlighted");
					$(this).addClass("clicked");
				});



								});
	}


	$("#statusline").text("Distrotype > Repository > Languages");
	


	$("#page4").hide() ;
	$("#page2").hide() ;


}	


function load_step4()
{
	$("#loading").show();
	if($("#page4").length)
	{
		$("#page4").show();
		$("#loading").hide();
	}

	else
	{
		$("<div />").load("ajax_pool #right #page4", function() {
						
								$(this).appendTo('#right_container');
								$("#loading").hide();
								});
	}


	$("#statusline").text("Distrotype > Repository > Languages > Upload");
	$("#page5").hide() ;
	$("#page3").hide() ;	
}	


function load_step5()
{
	$("#loading").show();
	if($("#page5").length)
	{
		$("#page5").show();
		$("#loading").hide();
	}

	else
	{
		$("<div />").load("ajax_pool #right #page5", function() {


			
							$(this).appendTo('#right_container');


	
							

				$(function() {  
     					$("#search").keypress(function (e) {  
         			if ((e.which && e.which == 13) || (e.keyCode && e.keyCode == 13)) {  
            				$('#search_button').click(); 
            				return false;  
         			} else {  
             				return true;  
         			}  
     				});  
				});


								$("#loading").hide();

				$('input:checkbox').checkbox({cls:'jquery-safari-checkbox'});
});

	}


	$("#statusline").text("Distrotype > Repository > Languages > Upload > Packages");
	$("#page6").hide() ;
	$("#page4").hide() ;	
}


// Language selection functions

function addtolangSelectList()
{



	if($('.selected_list div').length==0)
	{
		$('.clicked').addClass("default_lang");
	}
	else
	{
		$('.clicked').removeClass("default_lang");
	}

		$('.clicked').appendTo('.selected_list')

}

function addtolangList()
{
	$('.clicked').removeClass("default_lang");
	

	$('.clicked').appendTo('.list');

	if($('.selected_list div').length==1)
	{
		$('.selected_list div').addClass("default_lang");
	}

}


$(function(){

is_logged_in(); 
$("#loading").hide();
});


